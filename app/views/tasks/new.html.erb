<%= form_for @task do |f| %>
  <%= f.label "name" %>
  <%= f.text_field "name", {class: "name"} %><br/>

  <%= f.label "due_date" %>
  <%= f.text_field "due_date", {class: "due_date"} %><br/>

  <%= f.label "description" %>
  <%= f.text_area "description", {class: "description"} %><br/>

  <%= f.submit %>
<% end  %>
